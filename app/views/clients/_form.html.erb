<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> encontrado al modificar Cliente:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, 'Nombre Cliente' , style: "display: block" %>
    <%= form.text_field :name, class:'form-control mb-4' %>
  </div>

  <div>
    <%= form.label :age, 'Edad' ,style: "display: block" %>
    <%= form.number_field :age, class:'form-control mb-4' %>
  </div>

  <div>
    <%= form.submit 'Aceptar', class:'btn btn-success mt-3' %>
  </div>
<% end %>
